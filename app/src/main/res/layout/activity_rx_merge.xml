<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rx_merge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.run.funny.rxjavasampledemorun.RxMergeActivity">

    <TextView
        android:text="两个任务并发进行，只有两个任务执行完才更新数据"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_show1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="结果显示：\n"/>
    <TextView
        android:id="@+id/tv_show2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="数据更新结果：\n" />
    <Button
        android:textAllCaps="false"
        android:id="@+id/btn_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="RxMerge RxJava"/>
</LinearLayout>
